= form_for @child do |f|
  - if @child.errors.any?
    #error_explanation
      %h2= "#{pluralize(@child.errors.count, "error")} prohibited this child from being saved:"
      %ul
        - @child.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name, class: "form-control"
  .field
    = f.label :last_name
    = f.text_field :last_name, class: "form-control"
  .field
    = f.label :birthday
    = f.date_select :birthday, {start_year: 1995}, class: "form-control"
  .field
    = f.label :tent
    = f.collection_select :tent_id, Tent.all, :id, :number, {} , class: "form-control"
  .field
    = f.label :image
    = f.file_field :image, class: "form-control"
  .field
    = f.label :number
    = f.text_field :number, class: "form-control"
  .actions
    .btn-group
      = f.submit 'Save', class: "btn btn-primary"
      = link_to "Zur√ºck", :back, class: "btn btn-default"

